<Window x:Class="Chapter2.Collections.WPFLittleShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter2.Collections.WPFLittleShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="FruitsButton" Content="Get Fruits" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="FruitsButton_Click"/>
        <Button x:Name="ItemsButton" Content="Get Items" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="ItemsButton_Click"/>
        <ListBox x:Name="FruitsList" HorizontalAlignment="Left" Height="185" Margin="10,48,0,0" VerticalAlignment="Top" Width="242"/>
        <ListBox x:Name="ItemsList" HorizontalAlignment="Left" Height="185" Margin="271,48,0,0" VerticalAlignment="Top" Width="237"/>

    </Grid>
</Window>
