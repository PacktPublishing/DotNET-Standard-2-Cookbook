<Window x:Class="Chapter7.MailBox.WPFMail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter7.MailBox.WPFMail"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="508.216">
    <Grid>
        <TextBox x:Name="FromTextBox" HorizontalAlignment="Left" Height="23" Margin="10,9,0,0" TextWrapping="Wrap" Text="From Address" VerticalAlignment="Top" Width="477"/>
        <TextBox x:Name="ToTextBox" HorizontalAlignment="Left" Height="23" Margin="10,37,0,0" TextWrapping="Wrap" Text="To Address" VerticalAlignment="Top" Width="477"/>
        <TextBox x:Name="SubjectTextBox" HorizontalAlignment="Left" Height="23" Margin="10,65,0,0" TextWrapping="Wrap" Text="Subject" VerticalAlignment="Top" Width="477"/>
        <TextBox x:Name="BodyTextBox" HorizontalAlignment="Left" Height="180" Margin="10,93,0,0" TextWrapping="Wrap" Text="Body" VerticalAlignment="Top" Width="477" AcceptsReturn="True"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="412,292,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>

    </Grid>
</Window>
